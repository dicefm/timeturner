---
  parser: "babel-eslint"
  env:
    browser: true
    mocha: true
    node: true
  globals:
    expect: true
  rules:
    new-cap: 0 // mongoosejs
    strict: 0
    indent: [2, 4]
    quotes: [2, 'single']
    comma-dangle: [0, 'always-multiline']
    no-underscore-dangle: 0 // mongo _id
    camelcase: [1, {'properties': 'never'}]
    key-spacing: [2, {'align': 'colon'}]
    no-loop-func: 0
    no-unused-vars: 0 // see https://github.com/babel/babel-eslint/issues/21
    no-unused-expressions: 0
